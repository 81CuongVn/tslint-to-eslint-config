{
    "author": "Josh Goldberg <me@joshuakgoldberg.com>",
    "bin": {
        "tslint-to-eslint-config": "bin/tslint-to-eslint-config"
    },
    "bugs": {
        "url": "https://github.com/JoshuaKGoldberg/tslint-to-eslint-config/issues"
    },
    "description": "Converts your TSLint configuration to the closest possible ESLint equivalent.",
    "dependencies": {
        "chalk": "2.4.2",
        "commander": "2.20.0"
    },
    "devDependencies": {
        "@babel/core": "7.5.0",
        "@babel/preset-env": "7.5.0",
        "@babel/preset-typescript": "7.3.3",
        "@types/jest": "24.0.15",
        "@types/node": "12.0.12",
        "@typescript-eslint/eslint-plugin": "1.11.0",
        "@typescript-eslint/parser": "1.11.0",
        "babel-jest": "24.8.0",
        "eslint": "6.0.1",
        "eslint-config-airbnb": "17.1.1",
        "eslint-config-airbnb-base": "13.2.0",
        "eslint-config-prettier": "6.0.0",
        "eslint-plugin-import": "2.18.0",
        "husky": "3.0.0",
        "jest": "24.8.0",
        "lint-staged": "9.1.0",
        "prettier": "1.18.2",
        "strip-ansi": "5.2.0",
        "tslint": "5.18.0",
        "typescript": "3.5.2"
    },
    "homepage": "https://github.com/JoshuaKGoldberg/tslint-to-eslint-config#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "eslint",
        "tslint",
        "lint",
        "configuration"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{js,json,ts,xml,yaml}": [
            "prettier --write",
            "git add"
        ]
    },
    "name": "tslint-to-eslint-config",
    "repository": {
        "type": "git",
        "url": "github:JoshuaKGoldberg/tslint-to-eslint"
    },
    "scripts": {
        "eslint": "eslint \"./src/*.ts\" \"./src/**/*.ts\" --report-unused-disable-directives",
        "prettier": "prettier \"./src/*.{js,json,ts,xml,yaml}\" \"./src/**/*.{js,json,ts,xml,yaml}\" --ignore-path .prettierignore",
        "prettier:write": "npm run prettier -- --write",
        "test:unit": "jest",
        "test:end-to-end": "jest --config=test/jest.config.js",
        "test:end-to-end:accept": "jest --config=test/jest.config.js --globals=\"{\\\"acceptTestChanges\\\": true }\"",
        "tsc": "tsc"
    },
    "version": "0.1.8"
}
