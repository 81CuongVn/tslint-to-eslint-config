{
    "author": "Josh Goldberg <me@joshuakgoldberg.com>",
    "bin": {
        "tslint-to-eslint-config": "bin/tslint-to-eslint-config"
    },
    "bugs": {
        "url": "https://github.com/JoshuaKGoldberg/tslint-to-eslint-config/issues"
    },
    "description": "Converts your TSLint configuration to the closest possible ESLint equivalent.",
    "dependencies": {
        "chalk": "2.4.2",
        "commander": "2.20.0"
    },
    "devDependencies": {
        "@types/jest": "24.0.15",
        "@types/node": "12.0.10",
        "@typescript-eslint/eslint-plugin": "1.11.0",
        "@typescript-eslint/parser": "1.11.0",
        "eslint": "5.16.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-config-prettier": "5.0.0",
        "eslint-plugin-import": "2.18.0",
        "husky": "2.5.0",
        "jest": "24.8.0",
        "lint-staged": "8.2.1",
        "prettier": "1.18.2",
        "ts-jest": "24.0.2",
        "tslint": "5.18.0",
        "typescript": "3.5.2"
    },
    "homepage": "https://github.com/JoshuaKGoldberg/tslint-to-eslint-config#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "eslint",
        "tslint",
        "lint",
        "configuration"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{js,json,ts,xml,yaml}": [
            "prettier --write",
            "git add"
        ]
    },
    "name": "tslint-to-eslint-config",
    "scripts": {
        "eslint": "eslint \"./src/*.ts\" \"./src/**/*.ts\" --report-unused-disable-directives",
        "prettier": "prettier \"./src/*.{css,html,js}\" \"./src/**/*.{css,html,js}\"",
        "prettier:write": "npm run prettier -- --write",
        "test": "jest",
        "tsc": "tsc"
    },
    "version": "0.1.0"
}
